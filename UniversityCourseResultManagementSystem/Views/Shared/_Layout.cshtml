<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - University Course and Result Management System</title>
    @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <link href="~/Content/Navigation.css" rel="stylesheet" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:ThreeDDarkShadow">
        <div class="container">
            <h2 style="color:lightcyan">Univesity Course and Result Management Sytem</h2>
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Uinversity Management", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>
                        @Html.ActionLink("Department", "SaveDepartment", "Department")
                        <ul class="">
                            <li>@Html.ActionLink("Save Department", "SaveDepartment", "Department")</li>
                            <li>@Html.ActionLink("Department List", "DepartmentList", "Department")</li>
                            <li>@Html.ActionLink("Save Course", "SaveCourse", "Course")</li>
                            <li>@Html.ActionLink("Allocate Class Room", "ClassRoom", "Department")</li>
                            <li>@Html.ActionLink("Class Schedule", "ClassSchedule", "Department")</li>
                            <li>@Html.ActionLink("Unallocate Rooms", "UnallocateClassrooms", "Department")</li>
                        </ul>
                </li>
                <li>@Html.ActionLink("Teacher", "SaveTeacher", "Teacher")
                    <ul>
                        <li>@Html.ActionLink("Save Teacher", "SaveTeacher", "Teacher")</li>
                        <li>@Html.ActionLink("Assign Course", "AssignCourse", "TeacherCourse")</li>
                        <li>@Html.ActionLink("Course Statics", "CourseStatics", "Course")</li>
                        <li>@Html.ActionLink("Unassign Course", "UnAssignCourses", "Course")</li>
                    </ul>
                </li>
                <li>@Html.ActionLink("Student", "Register", "Student")
                    <ul>
                        <li>@Html.ActionLink("Register", "Register", "Student")</li>
                        <li>@Html.ActionLink("Enroll Course", "EnrollCourse", "EnrollCourse")</li>
                        <li>@Html.ActionLink("Save Result", "SaveResult", "Result")</li>
                        <li>@Html.ActionLink("View Result", "ViewResult", "Result")</li>
                    </ul>
                </li>
            </ul>
        </div>
        </div>
    </div>
    <div class="container body-content">
        <br />
        <br />
        <br />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Developed by Md. Abdul Alim</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
